.header{
  height: 100%;
  padding-bottom: 100rpx;
}
.orderList{
  background: #fff;
  padding-bottom: 14rpx;
}
.orderModal .orderDetail {
  display: flex;
  margin: 0 30rpx 20rpx;
}
.orderModal .orderDetail .image {
  width: 180rpx;
  height: 180rpx;
  margin-top: 20rpx;
}
.orderModal .orderDetail .image image {
  width: 100%;
  height: 100%;
}
.orderModal .orderDetail .proInfo {
  color: #888;
  font-size: 24rpx;
  margin: 60rpx 0 0 30rpx;
  vertical-align: middle;
}
.orderModal .orderDetail .proInfo .title {
  color: #000;
  font-size: 30rpx;
  padding-bottom: 14rpx;
}
.orderModal .orderDetail .proInfo view {
  line-height: 34rpx;
}

.orderInfo{
  margin-top: 24rpx;
  background: #fff;
  position: relative;
}
