@import "../template/template.wxss";
.header {
  height: 100%;
  padding-bottom: 228rpx;
} 
.foot {
  width: 100%;
  bottom: 0;
  position: fixed;
  background: #fff;
  font-size: 32rpx;
  box-shadow: 0px 0px 16rpx rgba(0, 0, 0, 0.08);
}

.foot .readArg {
  margin: 24rpx 25rpx 0;
  display: flex;
  font-size: 24rpx;
}

.foot .readArg view {
  margin: 10rpx 0;
}

.foot .readArg text {
  color: #4297ea;
}

.foot image {
  width: 26rpx;
  height: 26rpx;
  margin-top: 6rpx;
  margin-right: 16rpx;
}

.foot .btn {
  width: 100%;
  background: #ff6000;
  color: #fff;
  text-align: center;
  font-size: 36rpx;
  height: 97rpx;
  line-height: 97rpx;
}

