.orderInfo .flex:last-child{
  margin-top: 8rpx;
}
.orderInfo .flex:last-child view{
  margin-top: 24rpx;
}
.orderInfo .title{
  font-size: 34rpx;
  padding: 20rpx 25rpx 0;
}

.orderInfo .flex{
  display: flex;
  justify-content: space-between;
}

.orderInfo .flex view{
  font-size: 28rpx;
  color: #888888;
  margin: 15rpx 25rpx;
}
.orderInfo .alert{
  display: flex;
  margin: 0 25rpx;
  color: #B3B3B3;
  font-size: 24rpx;
  padding-bottom: 20rpx;
}
.orderInfo .alert image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 18rpx;  
}
.orderInfo .alert view{
  display: inline-block;
  line-height: 34rpx;
}
.orderInfo .rent view{
  color:#353535;
}

/* .orderInfo .money,.orderInfo .way,.orderInfo .choose{
  margin-top: 10rpx;
}  */

.orderInfo .money view,.orderInfo .way view,.orderInfo .choose view{
  margin-top: 25rpx;
}

.orderInfo .money view{
  color:#353535;
} 
.orderInfo .money::before{
  content: " ";
  position: absolute;
  left: 25rpx;
  right: 0;
  /* height: 1rpx; */
  border-bottom: 1rpx solid #E5E5E5;
}

.orderInfo .way::before{
  content: " ";
  position: absolute;
  left: 25rpx;
  right: 0;
  height: 1rpx;
  border-bottom: 1rpx solid #E5E5E5;
}

.orderInfo .choose::before{
  content: " ";
  position: absolute;
  left: 25rpx;
  right: 0;
  height: 1rpx;
  border-bottom: 1rpx solid #E5E5E5;
}

.agree{ 
  background: #fff;
}

.agree .readArg{
  margin: 24rpx 25rpx 0;
  display: flex;
  font-size: 24rpx;
}

.agree .readArg view{
  margin: 10rpx 0;
}

.agree image{
  width: 26rpx;
  height: 26rpx;
  margin-top: 6rpx;
  margin-right: 16rpx;
}