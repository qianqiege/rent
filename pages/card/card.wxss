/* pages/card/card.wxss */

.formCard {
  background: #f6f6f6;
}

.formList {
  background: #fff;
  font-size: 30rpx;
}

.formTitle {
  height: 100rpx;
  line-height: 100rpx;
  margin: 20rpx 0 0;
  background: #fff;
  padding: 0 25rpx;
  border-bottom: 1px solid #e5e5e5;
  font-size: 34rpx;
}

.formList .title {
  height: 100rpx;
  line-height: 100rpx;
  margin: 20rpx 25rpx 0;
} 

.formList .info {
  display: flex;
  width: 85%;
}

.formList .info .title, .info .info-input {
  display: inline-block;
}

.formList .info .title {
  width: 124rpx;
}

.formList .info .info-input {
  margin-top: 48rpx;
  width: 80%;
}

.formList .row {
  display: flex;
  justify-content: space-between;
}

.formList .row:not(:first-child)::after {
  content: " ";
  position: absolute;
  left: 25rpx;
  right: 0;
  height: 1rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.formList .row image {
  width: 40rpx;
  height: 37rpx;
  margin-top: 42rpx;
  margin-right: 25rpx;
}

.formList .row .picker view {
  display: inline-block;
}

.formList .row .picker .line {
  margin: 0 25rpx;
  color: #b3b3b3;
}

.formList .row .picker .month, view .year {
  width: 150rpx;
  height: 60rpx;
  background: #f6f6f6;
  border-radius: 8rpx;
  text-align: center;
  line-height: 60rpx;
  color: #b3b3b3;
}

.formList .row .getCode {
  width: 176rpx;
  height: 60rpx;
  border: 1px solid #ff6000;
  border-radius: 8rpx;
  margin: 42rpx 25rpx 0 0;
  line-height: 60rpx;
  text-align: center;
  color: #ff6000;
  padding: 0;
  font-size: 28rpx;
}

.signature {
  margin-top: 20rpx;
  background: #fff;
  padding-bottom: 25rpx;
}

.signTitle {
  height: 100rpx;
  line-height: 100rpx;
  margin: 20rpx 0 0;
  background: #fff;
  padding: 0 25rpx;
  font-size: 34rpx;
}

.clickSign {
  margin: 0 25rpx;
  width: 700rpx;
  height: 240rpx;
  background: #f6f6f6;
  border-radius: 20rpx;
  text-align: center;
  line-height: 240rpx;
  font-size: 30rpx;
  color: #b3b3b3;
}

.clickSign image {
  margin: 0 25rpx;
  width: 700rpx;
  height: 240rpx;
  justify-content: center;
}

.confirm {
  font-size: 24rpx;
  color: #b3b3b3;
}

.remarks {
  margin-top: 20rpx;
  background: #fff;
  padding-bottom: 25rpx;
}

.remarks .textarea {
  margin: 0 25rpx;
  width: 700rpx;
  height: 198rpx;
  background: #f6f6f6;
  border-radius: 20rpx;
}

.btn {
  margin: 75rpx 25rpx 50rpx;
}

.btnConfirm {
  width: 700rpx;
  height: 94rpx;
  background: #ff6100;
  border-radius: 20rpx;
  color: #fff;
  font-size: 36rpx;
  padding-bottom: 25rpx;
}

.prompt {
  width: 750rpx;
  height: 73rpx;
  background: #e64340;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  line-height: 73rpx;
  position: fixed;
  top: -1rpx;
  left: 0;
  bottom: 100rpx;
  z-index: 9999;
}

.showPrompt {
  width: 80%;
  position: fixed;
  left: 10%;
  bottom: 45%;
  background-color: #fff;
  border: 1px soild #000;
  border-radius: 20rpx;
  z-index: 99;
}

.showPrompt .title {
  font-size: 34rpx;
  color: #000;
  font-weight: bolder;
  text-align: center;
  margin:34rpx 0;
}

.showPrompt .content {
  color: #888;
  margin: 10rpx 30rpx 20rpx;
  text-align: center;
  line-height: 44rpx;
  font-size: 28rpx;
}

