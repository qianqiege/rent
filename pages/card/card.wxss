.showPrompt .doubleBtn {
  border-top: 1px solid #e5e5e5;
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.showPrompt .doubleBtn .btn {
  width: 49%;
  text-align: center;
  font-size: 30rpx;
  margin: 0;
  padding: 20rpx 0;
}

.showPrompt .doubleBtn .cancel {
  color: #5c5c5c;
  border-right: 1px solid #e5e5e5;
}

.showPrompt .doubleBtn .renew {
  color: #ff6000;
}

.sku-dialog_mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 11;
  color: #fff;
}

.closeOrder{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  right: 0;
  z-index: 999999;
   background: #F6F6F6; 
}

.closeOrder .content {
  background: #fff;
  height:665rpx;
}

.closeOrder .content .img {
  width: 100%;
  text-align: center;
  padding-bottom: 56rpx;
}

.closeOrder .content .img image {
  width: 164rpx;
  height: 164rpx;
  margin-top: 56rpx;
}

.closeOrder .content .img .text {
  font-size: 30rpx;
  color: #474747;
  text-align: center;
}

.closeOrder .content .order {
  border-top: 1px solid #e5e5e5;
  margin: 20rpx 25rpx 20rpx;
}

.closeOrder .content .orderDetail {
  display: flex;
  padding: 56rpx 0;
}

.closeOrder .content .orderDetail .image {
  width: 195rpx;
  height: 195rpx;
}

.closeOrder .content .orderDetail .image image {
  width: 100%;
  height: 100%;
}

.closeOrder .content .orderDetail .proInfo {
  color: #888;
  font-size: 24rpx;
  margin: 10rpx 0 0 25rpx;
}

.closeOrder .content .orderDetail .proInfo .title {
  color: #000;
  font-size: 28rpx;
  padding-bottom: 12rpx;
}

.closeOrder .content .orderDetail .proInfo view {
  line-height: 34rpx;
}

.closeOrder .return {
  
  margin: 80rpx 25rpx;
}

.closeOrder .return .button {
  width: 700rpx;
  height: 94rpx;
  border-radius: 20rpx;
  background: #ff6000;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  line-height: 94rpx;
}
