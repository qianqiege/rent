.content{
  background: #fff;

}
.content .img{
  width: 100%;
  text-align: center;
  padding-bottom: 56rpx;
}

.content .img image{
  width: 164rpx;
  height: 164rpx;
  margin-top: 56rpx;
}

.content .img .text{
  font-size: 30rpx;
  color: #474747;
  text-align: center;
}

.order{
  border-top: 1px solid #E5E5E5;
  margin: 20rpx 25rpx 20rpx;
}

.orderDetail {
  display: flex;
  padding: 56rpx 0;
}
 .orderDetail .image {
  width: 195rpx;
  height: 195rpx;
}
 .orderDetail .image image {
  width: 100%;
  height: 100%;
}
 .orderDetail .proInfo {
  color: #888;
  font-size: 24rpx;
  margin: 10rpx 0 0 25rpx;
}
.orderDetail .proInfo .title {
  color: #000;
  font-size: 28rpx;
  padding-bottom: 12rpx;
}
.orderDetail .proInfo view {
  line-height: 34rpx;
}

.return{
  margin: 80rpx 25rpx;
}

.return .button{
  width: 700tpx;
  height: 94rpx;
  border-radius:20rpx; 
  background: #FF6000;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  line-height: 94rpx;
}