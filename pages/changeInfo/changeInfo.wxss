/* pages/changeInfo/changeInfo.wxss */
@import "../template/template.wxss";
.reChoose {
  background: #fff;
  width: 100%;
  padding-bottom: 25rpx;
}

.reChoose .colorInfo {
  margin:25rpx;
}

.reChoose .colorInfo .title {
  font-size: 34rpx;
  color: #000;
  padding-top: 25rpx;
}

.color {
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
}

.radio {
  margin-right: 25rpx;
}

.radio view {
  /* display: inline-block; */
  width: 150rpx;
  height: 60rpx;
  border-radius: 8rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  border: 1rpx solid #b3b3b3;
}

.radio view.checked {
  border: 1rpx solid #ff6000;
  color: #ff6000;
  background: #ffefe5;
}

.radio view.disabled {
  border: 1px solid #b3b3b3;
  background: #f6f6f6;
  color: #9a9b9c;
}




.content {
  padding: 30rpx 25rpx;
  padding-bottom: 30rpx;
  background-color: #fff;
}

.info {
  font-size: 28rpx;
  color: #353535;
  padding-bottom: 26rpx;
}

.remark {
  font-size: 24rpx;
  color: #b3b3b3;
  padding-top: 20rpx;
}

.upload {
  display: flex;
  flex-direction: row;
}

.upload .row {
  height: 207rpx;
  width: 40%;
  background: #f4f4f5;
}

.row image {
  width: 100%;
  height: 207rpx;
}

.img {
  flex: 1;
  margin-right: 30rpx;
  text-align: center;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
}

.img image {
  flex: 1;
  background: #fff;
}

.img .pic {
  width: 42rpx;
  height: 39rpx;
  margin: 0 auto;
  margin-top: 21%;
}

.img .avatar {
  width: 100%;
  height: 207rpx;
}


.confirmBtn{
  margin: 0 auto;
  width: 700rpx;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  background: #FF6000;
  color: #fff;
  font-size: 36rpx;
  border-radius: 10rpx;
  margin-top: 100rpx;
}