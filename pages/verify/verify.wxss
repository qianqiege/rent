/* pages/verify/verify.wxss */
@import "../template/template.wxss";

.comOrder{
  background: #fff;
  margin-top: 25rpx;
}

.comOrder .titleInfo{
  font-size: 34rpx;
  color: #000;
  margin: 25rpx;
  padding: 25rpx 0;
  border-bottom: 1px solid #E5E5E5;
}
.item{
  display: flex;
}


.verify{
  width: 700rpx;
  height: 98rpx;
  border-radius: 10rpx;
  background: #FF6000;
  color: #fff;
  text-align: center;
  font-size: 36rpx;
  line-height: 98rpx;
  margin: 100rpx auto 0;
}

.upload {
  width: 80%;
  position: fixed;
  left: 10%;
  bottom: 50%;
  background-color: #fff;
  border: 1px soild #000;
  border-radius: 10rpx;
  z-index: 99;
}

.upload .fail{
  text-align: center;
  font-size: 34rpx;
  color: #000;
  margin: 30rpx 0;
  font-weight: bold;
}

.upload .imei{
  text-align: center;
  font-size: 28rpx;
  color: #353535;
  padding-bottom: 35rpx;
  border-bottom: 1px solid #E5E5E5;
}

.upload .upBtn{
  color: #FF6000;
  font-size: 30rpx;
  text-align: center;
  margin: 35rpx;
}


.sku-dialog_mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 11;
  color: #fff;
}