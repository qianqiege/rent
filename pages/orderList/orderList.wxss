@import "../template/template.wxss";

.header {
  box-shadow: 0px 0px 16rpx rgba(0, 0, 0, 0.08);
  position: fixed;
  top: 0;
  z-index: 999;
}

.header + .orderlist {
  margin-top: 128rpx;
}

.navbar {
  height: 104rpx;
  line-height: 104rpx;
  padding: 0 32rpx;
  position: relative;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  font-size: 32rpx;
}

.navbar .item {
  width: 172rpx;
  text-align: center;
}

.navbar .item.item_on {
  color: #ff6000;
}

.navbar .slider {
  position: absolute;
  content: " ";
  left: 0;
  bottom: 0;
  width: 115rpx;
  height: 8rpx;
  background-color: #ff6000;
  -webkit-transition: -webkit-transform 0.3s;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}

.orderlist:first-child {
  margin-top: 124rpx;
}

.orderlist:last-child {
  margin-bottom: 24rpx;
}

.orderlist {
  background: #fff;
  margin: 20rpx 0 0;
}

.orderlist .item {
  position: relative;
  padding-left: 32rpx;
  padding-right: 32rpx;
  display: flex;
}

.orderlist .item:not(:last-child):after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1rpx;
  width: 100%;
  border-bottom: 1rpx solid #E5E5E5;
  color: #E5E5E5;
}
