.footbtn {
  color: #ff6000;
  background: #fff;
  display: flex;
  justify-content: space-between;
  padding: 30rpx 30rpx 0;
  border-top: 1px solid #e5e5e5;
  position: relative;
  height: 98rpx;
  text-align: center;
}

.footbtn .faceSign {
  border: 1px solid #ff6000;
  color: #ff6000;
}

.footbtn .closeOrder {
  border: 1px solid #353535;
  color: #353535;
}

.footbtn .recomp{
  color: #B3B3B3;
  border: 1px solid #B3B3B3;
}

.footbtn .reclose{
  color: #B3B3B3;
  border: 1px solid #B3B3B3;
  position: absolute;
  top: 30rpx;
  right:30rpx ;
}

.footbtn .btn {
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 14rpx;
  width: 164rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  margin: 0 6rpx;
}

.footbtn .btn button[disabled] {
  color: #666;
  opacity: 0.5;
}

